<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit vects</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/vects/<%=vect._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="vect[title]" value="<%=vect.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="vect[location]"
                        value="<%=vect.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Add images</label>
                    <input type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Doctor Name</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Rs</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="vect[doctor]" value="<%=vect.doctor %>" required>\
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="vect[description]"
                        required><%= vect.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <% vect.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% })%>
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Update vect</button>
        </div>
        </form>
        <a href="/vects/<%= vect._id%>">Back To vects</a>

    </div>
    </div>