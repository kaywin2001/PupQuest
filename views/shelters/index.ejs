<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/cardstyle.css">
    <div id="cluster-map" style="width: 100%; height: 500px; border-radius:30px;box-shadow: rgba(226, 149, 120, 0.4) -5px 5px, rgba(226, 149, 129, 0.3) -10px 10px, rgba(226, 149, 120, 0.2) -15px 15px, rgba(226, 149, 120, 0.1) -20px 20px, rgba(226, 149, 120, 0.05) -25px 25px;"></div>
    <h1 style="padding:15px">All shelters</h1>
    <div>
        <a href="/shelters/new">add shelters</a>
    </div>
    <% for(let shelter of shelters){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4 cim">
                    <img class="img-fluid" src="<%=shelter.images[0].url%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="cart-title">
                            <%=shelter.title%>
                        </h5>
                        <p class="card-text">
                            <%= shelter.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= shelter.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/shelters/<%=shelter._id%>">View <%=shelter.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <%} %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const shelters = { features: <%- JSON.stringify(shelters) %>}

            </script>
            <script src="/javascripts/clusterMap.js"></script>